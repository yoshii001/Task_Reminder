<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer to give a 3D effect -->
    <item android:right="2dp" android:top="2dp">
        <shape>
            <solid android:color="#B0B0B0" /> <!-- Shadow color -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Main task container -->
    <item>
        <shape>
            <solid android:color="@color/white" /> <!-- Background color -->
            <stroke
                android:width="0.5dp"
                android:color="#D1D1D1" />
            <corners android:radius="12dp" />
            <padding
                android:left="12dp"
                android:top="8dp"
                android:right="12dp"
                android:bottom="8dp" />
        </shape>
    </item>
</layer-list>
